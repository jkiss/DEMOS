body
    position relative
    font-family 'Roboto'

svg
    text
        font-family Roboto
        line-height 1
        text-anchor middle
        pointer-events none
        fill rgba(0, 0, 0, 0.85)
        pointer-events none

.box
    height 3000px

.tool-tip
    white-space nowrap !important
    position absolute
    left 0
    top 0
    display none
    z-index 1000
    background-color white
    padding 7px 8px 7px 8px
    border 1px solid #eee
    font-size 13px
    line-height 1.2
    color #555
    border-radius 4px
    box-shadow 0px 1px 6px 0px rgba(0,0,0,0.3)
    transform translate(-50%, -110%)

.title
    font-weight bold
    font-size 16px
    color black

.desc
    margin-top .5em

.hover
    stroke #333
    stroke-width 1px
