body
    position relative

.box
    height 3000px

.tool-tip
    white-space nowrap !important
    position absolute
    left 0
    top 0
    // visibility hidden
    z-index 1000
    background-color white
    padding 7px 8px 7px 8px
    border 1px solid #eee
    font-size 13px
    line-height 1.2
    color #555
    border-radius 4px
    box-shadow 0px 1px 6px 0px rgba(0,0,0,0.3)

.title
    font-weight bold
    font-size 16px
    color black

.desc
    margin-top .5em
