body
    position relative
    font-family 'Roboto'

svg
    margin-top 50px
    
    text
        font-family Roboto
        line-height 1
        text-anchor middle
        pointer-events none
        fill rgba(0, 0, 0, 0.85)
        pointer-events none

.box
    height 3000px

.tool-tip
    white-space nowrap !important
    position absolute
    left 0
    top 0
    display none
    z-index 1000
    background-color white
    padding 7px 8px 7px 8px
    border 1px solid #eee
    font-size 13px
    line-height 1.2
    color #555
    border-radius 4px
    box-shadow 0px 1px 6px 0px rgba(0,0,0,0.3)
    transform translate(-50%, -110%)

.title
    font-weight bold
    font-size 16px
    color black

.desc
    margin-top .5em

.hover
    stroke #333
    stroke-width 1px

.control-box
    display flex
    align-items center

.play-box
    width 30px
    height 30px
    background-size 70%
    background-position 50% 50%
    background-repeat no-repeat
    // border solid 1px #333
    // border-radius 5px
    cursor pointer

    &[data-play~=play]
        background-image url(./res/play3.png)

    &[data-play~=pause]
        background-image url(./res/pause2.png)

.slider-box
    margin-left 10px
    flex-grow 1
